mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		.container
			+e.slider-wrap
				+e.slider--js.swiper-container
					.swiper-wrapper
						- for (var x = 0; x < 3; x++)
							+e.slide.swiper-slide
								+e.PICTURE.item
									source.swiper-lazy(data-srcset=`img/@2x/webp/banner.webp` type=`image/webp` srcset="#")
									img.swiper-lazy(data-src=`img/@2x/banner.jpg`, src="#", alt="")
					.swiper-pagination



	// end headerBlock